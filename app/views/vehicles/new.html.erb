
<h1>Vehicle Information</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(@vehicle, html: { class: 'form-horizontal' }) do |f| %>

    <%= f.hidden_field :user_id, :value => @user.id %>
    
    <%= f.input :year, label: "Year" %>
    
    <%= f.input :manufacturer, collection: @manufacturer, value_method: :name, :label => "Manufacturer" %>
    
    <%= f.input :model, collection: @manufacturer, as: :grouped_select, group_method: :vehiclemodels,  value_method: :name, :label => "Model" %>
    
    <%= f.input :specs, collection: @specs,  value_method: :specifications, label_method: :specifications, :label => "Specifications" %>
    
    <%= f.input :use, collection: @usage,  value_method: :usage, label_method: :usage, :label => "Usage" %>
    
    <br>
    <%= f.submit "Save Vehicle", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>