<h1>Policy Preferrence</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(@coverage, html: { class: 'form-horizontal' }) do |f| %>

    <%= f.hidden_field :user_id, :value => @user.id %>
    
    <%= f.input :bodilyinjury, collection: @bi, value_method: :limit, label_method: :limit, :label => "Bodily Injury" %>
    
    <%= f.input :propertydamage, collection: @pd,  value_method: :limit, label_method: :limit, :label => "Property Damage" %>
    
    <%= f.input :uninsuredunstacked, collection: @unmotor,  value_method: :unstacked, label_method: :unstacked, :label => "Uninsured Motorist" %>
    
    <%= f.input :underinsuredunstacked, collection: @undermotor,  value_method: :unstacked, label_method: :unstacked, :label => "Under Insured Motorist" %>
    
    <%= f.input :piprotection, collection: @pip,  value_method: :limit, label_method: :limit, :label => "Personal Injury Protection" %>
    
    <%= f.input :collision, collection: @collision,  value_method: :deductible, label_method: :deductible, :label => "Collision" %>
    
    <%= f.input :comprehensive, collection: @comp,  value_method: :deductible, label_method: :deductible, :label => "Comprehensive" %>
    
    <%= f.submit "Save Policy", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>